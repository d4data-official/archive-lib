{
  "env": {
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "airbnb-typescript/base"
  ],
  "rules": {
    "semi": "off",
    "new-cap": "off",
    "no-return-assign": "off",
    "arrow-parens": "off",
    "max-len": ["error", { "code": 120 }],
    "consistent-return": "off",
    "template-curly-spacing": ["error", "always"],
    "object-curly-newline": ["error", {
      "ImportDeclaration": { "multiline": true }
    }],
    "class-methods-use-this": "off",
    "no-console": "off",
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/no-useless-constructor": "off",
    "import/prefer-default-export": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "no-restricted-syntax": [
      "warn",
      {
        "selector": "CallExpression[callee.object.name='console'][callee.property.name!=/^(info|warn|error)$/]",
        "message": "Unexpected console log. If yous want to print message/warning/error during, you can use console.[info|warn|error]."
      }
    ]
  }
}
